<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns:viewmodels="clr-namespace:DemoListView.ViewModels"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DemoListView.Views.DebugView">
    <ContentPage.BindingContext>
        <viewmodels:DebugViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ListView ItemsSource="{Binding DebugInfos}"
                  BackgroundColor="Transparent"
                  HorizontalScrollBarVisibility="Always">
            <ListView.Header>
                <StackLayout
                    Orientation="Horizontal">
                    <Grid ColumnDefinitions="4">
                        <Label Grid.Column="0" Text="Customer"/>
                        <Label Grid.Column="1" Text="Device Id"/>
                        <Label Grid.Column="2" Text="Access Code"/>
                        
                    </Grid>

                </StackLayout>

            </ListView.Header>
            <ListView.Footer>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Debug Mode"/>

                </StackLayout>

            </ListView.Footer>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding CustomerName}"/>

                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>
    </ContentPage.Content>
</ContentPage>

